# =============================================================================
# AstroSwap DEX - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Stellar Network Configuration
# -----------------------------------------------------------------------------
STELLAR_NETWORK=testnet
STELLAR_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# -----------------------------------------------------------------------------
# Contract Addresses (populate after deployment)
# -----------------------------------------------------------------------------
FACTORY_CONTRACT_ID=
ROUTER_CONTRACT_ID=
STAKING_CONTRACT_ID=
AGGREGATOR_CONTRACT_ID=
BRIDGE_CONTRACT_ID=

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://astroswap:astroswap_dev_password@localhost:5434/astroswap
DB_PASSWORD=astroswap_dev_password

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6381

# -----------------------------------------------------------------------------
# Indexer API
# -----------------------------------------------------------------------------
API_PORT=4001
CORS_ORIGINS=*
POLLING_INTERVAL=5000
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY=1000
LOG_LEVEL=info
LOG_PRETTY=true
NODE_ENV=development

# -----------------------------------------------------------------------------
# Frontend (Vite)
# -----------------------------------------------------------------------------
VITE_STELLAR_NETWORK=testnet
VITE_FACTORY_CONTRACT_ID=
VITE_ROUTER_CONTRACT_ID=
VITE_STAKING_CONTRACT_ID=
VITE_INDEXER_API_URL=http://localhost:4001

