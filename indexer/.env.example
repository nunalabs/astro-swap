# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Contract Addresses (Deploy contracts first and add IDs here)
FACTORY_CONTRACT_ID=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ROUTER_CONTRACT_ID=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STAKING_CONTRACT_ID=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Database Configuration
# Use port 5433 to avoid conflict with Astro-Shiba (5432)
DATABASE_URL=postgresql://astroswap:changeme@localhost:5433/astroswap_indexer?schema=public
DB_PORT=5433
DB_PASSWORD=changeme

# API Configuration
# Use port 4001 to avoid conflict with Astro-Shiba API (4000)
API_PORT=4001
CORS_ORIGINS=http://localhost:3001,https://astroswap.io

# Redis Configuration (optional, use 6380 to avoid conflict with Astro-Shiba)
REDIS_PORT=6380

# Listener Configuration
POLLING_INTERVAL=5000          # Poll for events every 5 seconds
BATCH_SIZE=100                 # Fetch 100 events per batch
MAX_RETRIES=3                  # Retry failed requests 3 times
RETRY_DELAY=1000               # Wait 1 second between retries

# Logging Configuration
LOG_LEVEL=info                 # debug | info | warn | error
LOG_PRETTY=true                # Pretty print logs in development
NODE_ENV=development           # development | production
