{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "astroswap-dex",
  "framework": "vite",
  "buildCommand": "cd frontend && pnpm build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && pnpm install",
  "devCommand": "cd frontend && pnpm dev",
  "regions": ["iad1"],
  "env": {
    "VITE_STELLAR_NETWORK": "testnet"
  },
  "build": {
    "env": {
      "VITE_STELLAR_NETWORK": "testnet",
      "VITE_FACTORY_CONTRACT_ID": "@factory_contract_id",
      "VITE_ROUTER_CONTRACT_ID": "@router_contract_id",
      "VITE_STAKING_CONTRACT_ID": "@staking_contract_id",
      "VITE_INDEXER_API_URL": "@indexer_api_url"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
